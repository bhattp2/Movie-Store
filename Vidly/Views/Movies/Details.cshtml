@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Name</h2>
<ul>
    <li>@Model.GenreType.Name</li>
    <li>@Model.ReleaseDate.DayOfWeek  @Model.ReleaseDate.ToString("dd MMM yyyy")</li>
    <li>@Model.DateAdded.DayOfWeek @Model.DateAdded.ToString("dd MMM yyyy")</li>
    <li>@Model.NoOfStocks</li>
</ul>

